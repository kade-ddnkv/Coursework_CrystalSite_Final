@{
}

@model (string chemicalUrlName, IEnumerable<PropertyModel> properties)

<div class="mb-3">
    <h1 class="display-6">@Html.Raw(ChemicalModel.UrlNameToHtmlName[Model.chemicalUrlName])</h1>
</div>
<div class="vstack gap-2 mx-auto">
    @foreach (PropertyModel property in Model.properties)
    {
        <div class="card">
            <div class="card-body bg-light p-2">
                <a class="stretched-link @(property.Existing == "true" ? "link-primary" : "link-secondary")" style="text-decoration: none;"
               href="/data-by-chemical/ch/@Model.chemicalUrlName/@PropertyModel.NameRusToUrlName[property.NameRus]/">@property.NameRus</a>
            </div>
        </div>
    }
</div>

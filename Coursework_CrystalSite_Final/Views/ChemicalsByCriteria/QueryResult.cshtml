@{
}

@section PageCss
{
<link rel="stylesheet" href="~/css/chemicals_by_criteria.css" asp-append-version="true" />
}

@section Scripts
{
<script src="~/js/chemicals_by_criteria.js"></script>
}

@model QueryResultModel

<div class="pb-2">
    <h2>Краткий список веществ:</h2>
</div>
<div class="row">
    <div class="col-md-10 col-lg-8">
        <ol class="BriefChemicalsList pb-3">
            @foreach (object chemical in Model.briefChemicalList)
            {
                @*<div class="col BriefChemical"><span>@Html.Raw(chemical)</span></div>*@
                <li class="BriefChemical"><span>@Html.Raw(chemical)</span></li>
            }
        </ol>
    </div>
</div>
<div class="pb-2">
    <h2>Полная таблица совпадений в базе данных:</h2>
</div>
<div id="table_query_result">
    @await Html.PartialAsync("_DynamicTablePartialView", Model.dynamicTable)
</div>
